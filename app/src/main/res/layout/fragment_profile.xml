<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about"
        android:layout_marginTop="200dp"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@id/btn_account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/green"/>

    <Button
        android:id="@+id/btn_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/account"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@id/btn_contact"
        app:layout_constraintEnd_toEndOf="@+id/btn_about"
        app:layout_constraintStart_toStartOf="@+id/btn_about"
        app:layout_constraintTop_toBottomOf="@+id/btn_about"
        android:backgroundTint="@color/orange" />

    <Button
        android:id="@+id/btn_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contact"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@id/btn_orders"
        app:layout_constraintEnd_toEndOf="@+id/btn_account"
        app:layout_constraintStart_toStartOf="@+id/btn_account"
        app:layout_constraintTop_toBottomOf="@+id/btn_account"
        android:backgroundTint="@color/pink" />

    <Button
        android:id="@+id/btn_orders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/orders"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@id/btn_settings"
        app:layout_constraintEnd_toEndOf="@+id/btn_contact"
        app:layout_constraintStart_toStartOf="@+id/btn_contact"
        app:layout_constraintTop_toBottomOf="@+id/btn_contact"
        android:backgroundTint="@color/aqua" />

    <Button
        android:id="@+id/btn_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="200dp"
        android:text="@string/settings"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_orders"
        app:layout_constraintStart_toStartOf="@+id/btn_orders"
        app:layout_constraintTop_toBottomOf="@+id/btn_orders"
        android:backgroundTint="@color/yellow"
        android:textColor="@color/black"/>
</androidx.constraintlayout.widget.ConstraintLayout>