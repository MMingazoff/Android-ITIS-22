<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/open_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/share_link"
        android:backgroundTint="@color/red"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/share_photo"
        app:layout_constraintEnd_toEndOf="@+id/share_photo"
        app:layout_constraintStart_toStartOf="@+id/share_photo" />

    <Button
        android:id="@+id/share_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/share_cat"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/choose_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/black"
        android:text="@string/choose_pic"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/share_photo"
        app:layout_constraintStart_toStartOf="@+id/share_photo"
        app:layout_constraintTop_toBottomOf="@+id/share_photo" />

    <ImageView
        android:id="@+id/chosen_pic"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>