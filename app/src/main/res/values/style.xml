<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:fontFamily">@font/jetbrains_mono_bold</item>
        <item name="android:textColor">@color/blue</item>
        <item name="colorPrimary">@color/grey</item>
    </style>

    <style name="AppTheme.AppBarOverlay.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="TextAppearance.AppCompat.TitleCollapsed">
        <item name="android:fontFamily">@font/jetbrains_mono_bold</item>
    </style>

    <style name="TextAppearance.AppCompat.TitleExpanded">
        <item name="android:fontFamily">@font/jetbrains_mono_bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowRadius">24</item>
    </style>
</resources>